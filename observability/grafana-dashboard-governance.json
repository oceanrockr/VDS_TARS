{
  "dashboard": {
    "title": "T.A.R.S. - Federation Governance & Policy Compliance",
    "tags": ["tars", "federation", "governance", "policy"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Federation Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(tars_federation_node_status)",
            "legendFormat": "Total Nodes"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Healthy Nodes",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "count(tars_federation_node_status == 1)",
            "legendFormat": "Healthy"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Policy Compliance Rate",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(tars_policy_decisions_total{decision=\"allow\"}[5m])) / sum(rate(tars_policy_decisions_total[5m])) * 100",
            "legendFormat": "Compliance %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Consensus Votes",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "count(tars_consensus_vote_status{status=\"pending\"})",
            "legendFormat": "Pending Votes"
          }
        ]
      },
      {
        "id": 5,
        "title": "Policy Decisions Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(tars_policy_decisions_total{decision=\"allow\"}[5m]))",
            "legendFormat": "Allowed"
          },
          {
            "expr": "sum(rate(tars_policy_decisions_total{decision=\"deny\"}[5m]))",
            "legendFormat": "Denied"
          },
          {
            "expr": "sum(rate(tars_policy_decisions_total{decision=\"warn\"}[5m]))",
            "legendFormat": "Warnings"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Policy Violations by Type",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "sum by (policy_type) (rate(tars_policy_decisions_total{decision=\"deny\"}[5m]))",
            "legendFormat": "{{policy_type}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Federation Heartbeats",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "sum by (node_id) (rate(tars_federation_heartbeats_total[1m]))",
            "legendFormat": "{{node_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm",
            "custom": {
              "drawStyle": "line"
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Model Aggregation Status",
        "type": "table",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "mlsync_model_version",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "model_name": "Model",
                "model_version": "Version",
                "Value": "Last Update"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "Consensus Latency",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(tars_consensus_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(tars_consensus_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1.0, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Gossip Message Rate",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum by (message_type) (rate(tars_federation_gossip_sent_total[1m]))",
            "legendFormat": "Sent: {{message_type}}"
          },
          {
            "expr": "sum by (message_type) (rate(tars_federation_gossip_received_total[1m]))",
            "legendFormat": "Received: {{message_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm"
          }
        }
      },
      {
        "id": 11,
        "title": "Top Policy Violations",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "topk(10, sum by (policy_id, resource) (increase(tars_policy_decisions_total{decision=\"deny\"}[1h])))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "policy_id": "Policy",
                "resource": "Resource",
                "Value": "Violations (1h)"
              }
            }
          }
        ]
      }
    ]
  }
}
